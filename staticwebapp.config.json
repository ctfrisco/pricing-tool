{
  "routes": [
    {
      "route": "/",
      "methods": [
        "get"
      ],
      "rewrite": "/index.html"
    },
    {
      "route": "/.auth/login/aad",
      "methods": [
        "get"
      ],
      "redirect": "/.auth/login/aad",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/.auth/login/aad/callback",
      "methods": [
        "get",
        "post"
      ],
      "redirect": "/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/.auth/*"
    ]
  }
}